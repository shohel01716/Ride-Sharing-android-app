<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:scaleType="fitXY"
            android:src="@drawable/head" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:background="#fff"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/tvHiFName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:text="Hi First Name"
                    android:textColor="#003057"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/tvAccountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:textColor="#003057"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:text="BAL: N24,790"
                    android:textColor="#003057"
                    android:textSize="40dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="#EDEDED">

                <TextView
                    android:id="@+id/tvAddPromoCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_span="1"
                    android:text="Add Promo Code"
                    android:textColor="#003057"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvEditProfile"
                    android:layout_width="147dp"
                    android:layout_height="match_parent"
                    android:layout_span="1"
                    android:gravity="right"
                    android:text="Edit Profile"
                    android:textColor="#003057"
                    android:textSize="16dp" />
            </TableRow>


            />
        </TableLayout>

    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/imgStartBig"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:src="@drawable/start" />

            <ImageView
                android:id="@+id/imgAddFunds"
                android:layout_width="112dp"
                android:layout_height="83dp"
                android:src="@drawable/add" />

            <ImageView
                android:id="@+id/imgTransactionHiistory"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:src="@drawable/transactionhistory" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:id="@+id/tvOwnAcctTab"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Start Ride" />

            <TextView
                android:id="@+id/tvCoronationAcctTab"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Add Funds" />


            <TextView
                android:id="@+id/tvOtherBankAcctTab"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="2"
                android:textStyle="bold"
                android:text="Transaction History" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"

            >

            <ImageView
                android:id="@+id/imgRoute1"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:src="@drawable/route1" />

            <ImageView
                android:id="@+id/imgRoute2"
                android:layout_width="127dp"
                android:layout_height="71dp"
                android:src="@drawable/route2" />

            <ImageView
                android:id="@+id/imgHelpSupport"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:src="@drawable/helpandsupport" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/tvTransactionHistory"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:lines="2"
                android:textStyle="bold"
                android:text="Register Route 1" />

            <TextView
                android:id="@+id/tvAssetManagement"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:lines="2"
                android:textStyle="bold"
                android:text="Register Route 2" />


            <TextView
                android:id="@+id/tvHelpSupport"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:lines="2"
                android:textStyle="bold"
                android:text="Help and Support" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgStart"
                android:layout_width="wrap_content"
                android:layout_height="116dp"
                android:layout_margin="20dp"
                android:layout_span="3"
                android:gravity="center"
                android:src="@drawable/banner" />

        </TableRow>

    </TableLayout>
</LinearLayout>