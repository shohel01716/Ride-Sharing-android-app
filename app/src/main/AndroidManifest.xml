<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techline.rydeshare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HelpSupport"
            android:label="@string/title_activity_help_support"
            android:parentActivityName=".DashboardPass"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techline.rydeshare.DashboardPass" />
        </activity>
        <activity
            android:name=".RegisterRoute2"
            android:label="@string/title_activity_register_route2"
            android:parentActivityName=".DashboardPass"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".RegisterRoute1"
            android:label="@string/title_activity_register_route1"
            android:parentActivityName=".DashboardPass"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".TransactionHistory"
            android:label="@string/title_activity_transaction_history"
            android:parentActivityName=".DashboardPass"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techline.rydeshare.DashboardPass" />
        </activity>
        <activity
            android:name=".AddFunds"
            android:label="@string/title_activity_add_funds"
            android:parentActivityName=".DashboardPass"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techline.rydeshare.DashboardPass" />
        </activity>
        <activity
            android:name=".StartRide"
            android:label="@string/title_activity_start_ride"
            android:parentActivityName=".DashboardPass"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techline.rydeshare.DashboardPass" />
        </activity>
        <activity
            android:name=".DashboardDriver"
            android:label="@string/title_activity_dashboard_driver"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DashboardPass"
            android:label="@string/title_activity_dashboard_pass"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".signupDriver" />
        <activity
            android:name=".EditProfileDriver"
            android:label="Edit Profile"
            android:parentActivityName=".DashboardDriver"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.techline.rydeshare.DashboardDriver" />
            </activity>
        <activity
            android:name=".EditProfilePass"
            android:label="Edit Profile"
            android:parentActivityName=".DashboardPass"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.techline.rydeshare.DashboardPass" />
            </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".signin"
            android:label="Sign In" />
        <activity
            android:name=".signup"
            android:label="Sign Up" />
    </application>

</manifest>